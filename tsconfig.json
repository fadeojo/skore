{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "paths": {
      "@skore/auth": ["libs/auth/src"],
      "@skore/auth/*": ["libs/auth/src/*"],
      "@skore/skore-exception": ["libs/skore-exception/src"],
      "@skore/skore-exception/*": ["libs/skore-exception/src/*"],
      "@skore/mailer": ["libs/mailer/src"],
      "@skore/mailer/*": ["libs/mailer/src/*"]
    }
  }
}
